{% extends "base.html.jinja"%}
{% block content %}
	<p class="h1 text-center my-5">Ekstrakcja opinii</p>
		<ul class=list-group>
			{%for product in products%}
				<li class="list-group-item d-flex justify-content-between align-items-center">
					<a href="{{url_for('product', code=product.product_code)}}">{{product.product_code}}</a>
					<span class='badge bg-primary rounded-pill'>{{product.opinions_count}}</span>
					<span class='badge bg-danger rounded-pill'>{{product.cons_count}}</span>
					<span class='badge bg-success rounded-pill'>{{product.pros_count}}</span>
					<span class='badge bg-secondary rounded-pill'>{{product.average_score}}</span>
				</li>
			{%endfor%}
		</ul>
{%endblock content%}

