{% extends "base.html.jinja" %}
{%block content%}
	<p class="h1 text-center my-5">{{product_code}}</p>
 {{opinions|safe}}
	<div>
		<!-- Button trigger modal -->
		<button
			type="button"
			class="btn btn-primary"
			data-bs-toggle="modal"
			data-bs-target="#exampleModal"
		>
			Zobacz wykresy
		</button>
		<!-- Modal -->
		<div
			class="modal fade"
			id="exampleModal"
			tabindex="-1"
			aria-labelledby="exampleModalLabel"
			aria-hidden="true"
		>
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<h1 class="modal-title fs-5" id="exampleModalLabel">Wykresy</h1>
						<button
							type="button"
							class="btn-close"
							data-bs-dismiss="modal"
							aria-label="Close"
						></button>
					</div>
					<div class="modal-body">
						<p>Wykres slupkowy</p>
						<img src="./src/bar_graph.png" alt="" srcset="" />
					</div>
					<div class="modal-body">
						<p>Wykres kolowy</p>
						<img src="./src/cirlce_graph.jpg" alt="" srcset="" />
					</div>
					<div class="modal-footer">
						<button
							type="button"
							class="btn btn-secondary"
							data-bs-dismiss="modal"
						>
							Close
						</button>
					</div>
				</div>
			</div>
		</div>
	</div>
{%endblock content%}
{%block scripts%}
<script>
$(document).ready(function () {
        $('#opinions').DataTable();
    });
</script>
{%endblock scripts%}